{
  "manifest_version": 2,
  "name": "Nanolist",
  "description": "List from webpages selection for abz.agency",
  "author": "Aleksey Chipiga",
  "version": "0.1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/",
    "storage"
  ]
}