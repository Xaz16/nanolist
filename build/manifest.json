{
  "manifest_version": 2,
  "name": "Nanolist",
  "description": "List from webpages selection for abz.agency",
  "author": "Aleksey Chipiga",
  "version": "0.7.0",
  "icons": { 
    "16": "chip16.png",
    "48": "chip48.png",
    "128": "chip128.png" 
  },
  "browser_action": {
    "default_popup": "main.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/",
    "storage"
  ]
}